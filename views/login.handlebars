<div class="container-fluid my-5">

  <form class="login-form mx-5">
    <h2 class="text-dark">Log in</h2>
    <div class="mb-3 col-md-3 text-dark">
      <label class="form-label">Email address</label>
      <input type="email" class="form-control col-6" id="email-login" />

    </div>
    <div class="mb-1 col-md-3">
      <label class="form-label text-dark">Password</label>
      <input type="password" class="form-control" id="password-login" />
      <a class="nav-link text-link" href="/signup">No account? Sign up now!</a>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<script src="/js/login.js"></script>